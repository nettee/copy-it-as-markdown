{
  "manifest_version": 3,
  "name": "Copy it as markdown",
  "description": "Copy it as markdown!",
  "version": "1.0.2",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "128": "img/icon100.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "showdown.min.js", "convert-html-to-markdown.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background-wrapper.js"
  },
  "action": {
    "default_icon": {
      "19": "img/icon100.png",
      "38": "img/icon100.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["img/icon100.png", "get-selected-html.js", "get-hyperlink-info.js", "showdown.min.js", "convert-html-to-markdown.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
