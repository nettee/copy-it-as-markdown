{
  "manifest_version": 2,
  "name": "Copy it as markdown",
  "description": "Copy it as markdown!",
  "version": "0.1.0",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon128.png",
      "38": "img/icon128.png"
    }
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "img/icon128.png"
  ]
}
